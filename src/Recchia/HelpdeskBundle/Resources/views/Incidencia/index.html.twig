{% extends '::layout.html.twig' %}

{% block content -%}
<div class="panel panel-default">
    <div class="panel-body">
        <h2 class="col-lg-4">Incidencias <small>({{ entities.getTotalItemCount }})</small></h2>
        <p class="col-lg-8 text-right"><a class="btn btn-primary" href="{{ path('incidencia_new') }}"><span class="glyphicon glyphicon-edit"></span> Nueva Incidencia</a></p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>CÃ©dula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Incidencia</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td class="text-right" colspan="6">{{ knp_pagination_render(entities) }}</td>
            </tr>
        </tfoot>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.incidencia }}</td>
                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('incidencia_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span> ver</a>
                    <a class="btn btn-success btn-sm" href="{{ path('incidencia_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> editar</a>
                </td>
            </tr>
        
        {% else %}
            <tr class="success"><td colspan="8"><p class="lead text-center">No existen registros</p></td></tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
